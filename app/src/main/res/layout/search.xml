<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/pokeball"
    tools:context=".ui.SearchActivity">

    <ImageView
        android:id="@+id/pokemonImageView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/bolas"
    android:elevation="4dp" />

    <TextView
        android:id="@+id/pokemonNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemonImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/pokemonHeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemonNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="#000000" /> <!-- Cambia el color del texto -->

    <TextView
        android:id="@+id/pokemonWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemonHeightTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:textColor="#000000" /> <!-- Cambia el color del texto -->

    <TextView
        android:id="@+id/pokemonTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemonWeightTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:textColor="#000000" /> <!-- Cambia el color del texto -->

    <Button
        android:id="@+id/searchPokemonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Mostrar PokÃ©mon al Azar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:background="@color/color_primary"
        android:elevation="4dp" />


</RelativeLayout>
